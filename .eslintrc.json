{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"ignorePatterns": ["dist/"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"parser": "@typescript-eslint/parser",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"ignoredNodes": ["PropertyDefinition"],
				"offsetTernaryExpressions": true
			}
		]
	}
}
